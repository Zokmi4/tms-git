server {
    listen {{ nginx_listen_port }};
    server_name {{ nginx_server_name }};
    
    location / {
        root {{ nginx_root_path }};
        index index.html index.htm;
    }

    error_page 500 502 503 504 /50x.html;
    location = /50x.html {
        root {{ nginx_root_path }};
    }
}
